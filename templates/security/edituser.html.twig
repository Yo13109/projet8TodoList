{% extends 'base.html.twig' %}





{% block body %}
    <div class="row">
        {% for user in user %}
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h4><a >{{ user.email }}</a></h4>
                
                </div>
                <div>
                    {% if user.roles == null %}
				<a href="{{ path('role_admin',{'id': user.id}) }}">
						Devenir ADMIN</a>   <a href="{{ path('role_utilisateur',{'id': user.id}) }}"> Devenir Utilisateur
						</a>
			{% else %}

				{% if user.roles == ['ROLE_USER'] %}
					<button class="btn btn-info btn-sm pull-right"><a href="{{ path('role_admin',{'id': user.id}) }}"> Devenir ADMIN
						</a></button>
                        {% else %}

                       <button class="btn btn-info btn-sm pull-right"> <a href="{{ path('role_utilisateur',{'id': user.id}) }}"> Devenir Utilisateur
						</a></button>
				{% endif %}
				{% endif %}
                </div>
            </div>
        </div>
        {% endfor %}
        </div>
{% endblock %}